@import './mixin'
@import './glyphicons-netdna-cdn.css'
@import './codemirror.css'
@import './monokai.css'

html, body
	width: 100%
	height: 100%

body
	color: #444
	background: #F8F8F8
	position: absolute
	top: 0
	left: 0
	margin: 0
	font-family: Montserrat,Helvetica,Arial,sans-serif

h2
	text-align: center
	font-size: 22px

p
	text-align: center
	font-size: 16px

header
	width: 100%
	position: fixed
	left: 0
	top: 0

	h2
		text-transform: lowercase
		font: bold 48px Montserrat,Helvetica,Arial,sans-serif
		letter-spacing: -5px
		color: #FF005F
		margin: 15px

section.playground
	position: absolute
	left: 10px
	top: 80px
	right: 50%
	bottom: 80px
	margin: 10px

aside#output
	position: absolute
	left: 10px
	right: 50%
	bottom: 80px
	height: 120px
	background: rgba(255,255,255,0.8)
	opacity: 0.8
	padding: 10px
	font-family: monospace
	white-space: pre
	margin: 10px

input.repl
	position: absolute
	left: 10px
	right: 50%
	bottom: 80px
	height: 20px
	// background: rgba(255,255,255,0.8)
	opacity: 0.8
	padding: 2px
	font-family: monospace
	white-space: pre
	margin: 10px
	border: 1px solid #AAA

.console-label
	position: absolute
	left: 14px
	bottom: 204px
	margin: 10px
	opacity: 0.8
	text-transform: uppercase
	font-family: monospace
	font-size: 9px

textarea.sandbox, div.sandbox
	position: absolute
	left: 50%
	top: 80px
	right: 10px
	bottom: 80px
	background: rgba(0,0,0,0.8)
	color: #EEE
	padding: 30px
	margin: 10px
	border: 0

div.CodeMirror.sandbox
	padding: 0
	height: auto
	line-height: 1.2
	box-sizing: border-box
	border: 1px solid #DDD

select.examples
	position: absolute
	right: 20px
	top: 36px

button.run
	padding: 5px 10px
	position: absolute
	right: 20%
	width: 10%
	bottom: 110px
	text-transform: lowercase
	font: bold 32px Montserrat, Helvetica, Arial, sans-serif
	letter-spacing: -2px
	color: #F8f8f8
	background: #444
	border: 1px solid black

button.run:hover, button.run:active
	background: #A6E22A

button.run.selected:hover, button.run.selected:active
	background: #FF005F

button.refresh-example, button.refresh-playground
	position: absolute
	top: 0px
	width: 26px
	height: 26px
	padding: 0px 2px
	font-size: 14px

button.refresh-playground
	display: none
	left: 106px
	top: 94px
	display: none

nav.sandbox
	display: none
	position: absolute
	right: 40px
	top: 94px
	width: 94px
	height: 26px
	z-index: 1000

	button
		position: absolute
		top: 0px
		width: 26px
		height: 26px
		padding: 1px 0 0
		outline: 0
		background: #f4f5f5
		background-image: linear-gradient(to bottom, #f4f5f5, #dfdddd)
		border: 1px solid #444

	button.refresh-example
		right: 0px
		padding: 0

	button.help
		right: 130px
		padding: 0
		font-size: 14px

	button.save
		right: 107px
		padding: 0
		font-size: 14px

	button.langswitch-coffee
		right: 65px

	button.langswitch-vanilla
		right: 42px

	button:active, button.selected
		// border:1px solid #bfc4c4
		background-color: #d9dddd
		background-image: linear-gradient(to bottom, #d9dddd, #8A8A8A)
		box-shadow: inset 1px 1px 1px rgba(18,18,18,0.3)
		// filter:progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#d9dddd, endColorstr=#c6c3c3)

aside#help
	display: none
	position: absolute
	z-index: 2000
	left: 50%
	top: 116px
	width: 600px
	margin-left: -300px
	box-sizing: border-box
	border: 1px solid #AAA
	border-radius: 3px
	background: #FDF5A9
	box-shadow: 2px 16px 48px rgba(40,40,40,0.45)
	padding: 0 30px
	font: 14px Helvetica, Helvetica Neue, Arial, sans-serif

	dt
		height: 1.5em
		font-family: monospace

		button
			height: 22px
			width: 22px
			padding: 0 1px

	dd
		margin: -1em 0 0 50px
		position: relative
		top: -0.35em

	dl.globals dd
		margin-left: 72px

	a.forkme img
		position: absolute
		top: 0
		right: 0
		border: 0

a#pixi
	display: block
	position: absolute
	width: 56px
	height: 22px
	bottom: 64px
	right: 20px
	background: center center no-repeat url("images/pixi.png") #11112A
	z-index: 100
	padding: 2px
	border: 1px solid #DDD
	border-top: 0

#stats
	position: absolute
	left: 10px
	top: 80px
	margin: 10px

footer
	clear: both
	width: 100%
	position: fixed
	left: 0
	bottom: 0
	height: 80px
	text-align: center
	padding: 0 15px

	h3
		text-transform: uppercase
		font-size: 50px
		color: #EBEBEB
		margin: 0
		letter-spacing: 10px
		transition: all 0.25s ease-in-out

	span
		font-family: monospace
		display: block

footer.draghover h3
	color: #00BBFF
	// box-shadow: 0 0 5px rgba(0, 128, 255, 1)
	// -webkit-box-shadow: 0 0 5px rgba(0, 128, 255, 1)
	// -moz-box-shadow: 0 0 5px rgba(0, 128, 255, 1)
	// border-top: 1px solid rgba(0, 128, 255, 0.8)

