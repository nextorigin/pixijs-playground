{
  "server": {
    "port"  : 9294
  },

  "routes": [
    { ""        : "./public" },
    { "/test"    : "./test/public" }
  ],

  "packages": {
    "appName": {
      "libs"    : [
        "lib/runtime.js",
        "lib/stats.min.js",
        "lib/pixi.dev.js"
      ],
      "modules" : [
        "es5-shimify",
        "json2ify",
        "jqueryify",
        "spine",
        "spine/lib/local",
        "spine/lib/route",
        "spine/lib/manager",
        "codemirror/lib/codemirror",
        "iced-coffee-script/extras/coffee-script-iced",
        "emoji-images"
      ],
      "paths"  : ["./app"],
      "target" : "./public/application.js",
      "jsAfter": "jade.rethrow = function rethrow(err, filename, lineno){ throw err; } "
    },
    "css": {
      "paths"  : "./css",
      "target" : "./public/application.css"
    },
    "test": {
      "identifier" : "specs",
      "jsAfter"    : "require('lib/setup'); for (var key in specs.modules) specs(key);",
      "paths"      : ["./test/specs"],
      "target"     : "./test/public/specs.js"
    }
  }
}
